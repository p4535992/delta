<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <import resource="classpath:ee/webmedia/alfresco/workflow/search/task-search-context.xml" />

   <bean id="workflowModelBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
      <property name="models">
         <list>
            <value>ee/webmedia/alfresco/workflow/model/workflowCommonModel.xml</value>
            <value>ee/webmedia/alfresco/workflow/model/workflowSpecificModel.xml</value>
         </list>
      </property>
      <property name="labels">
         <list>
            <value>ee/webmedia/alfresco/workflow/model/workflow-common-model</value>
            <value>ee/webmedia/alfresco/workflow/model/workflow-specific-model</value>
         </list>
      </property>
   </bean>

   <bean id="workflowResourceBundleBootstrap" class="org.alfresco.web.app.ResourceBundleBootstrap">
      <property name="resourceBundles">
         <list>
            <value>ee.webmedia.alfresco.workflow.web.workflow-webclient</value>
         </list>
      </property>
   </bean>

   <bean class="org.alfresco.web.config.WebClientConfigBootstrap" init-method="init" depends-on="commonWebClientConfigBootstrap">
      <property name="configs">
         <list>
            <value>classpath:ee/webmedia/alfresco/workflow/web/workflow-web-client-config.xml</value>
            <value>classpath:ee/webmedia/alfresco/workflow/web/workflow-settings-web-client-config.xml</value>
         </list>
      </property>
   </bean>

   <bean class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
      <property name="resourceBundles">
         <list>
            <value>ee/webmedia/alfresco/workflow/model/workflow-messages</value>
         </list>
      </property>
   </bean>

   <bean id="workflowRootBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="workflowRootBootstrap" />
      <property name="executeOnceOnly" value="true" />
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/workflow/bootstrap/workflow.xml</prop>
            </props>
         </list>
      </property>
   </bean>

   <bean id="testWorkflowTemplatesBootstrap" class="ee.webmedia.alfresco.common.bootstrap.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="testWorkflowTemplatesBootstrap" />
      <property name="executeOnceOnly" value="true" />
      <property name="importer" ref="spacesBootstrap" />
      <property name="enabled" value="${project.test}" />
      <property name="dependsOn">
         <list>
            <ref bean="documentTemplatesRootBootstrap" />
         </list>
      </property>
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/cm:templates</prop>
               <prop key="location">ee/webmedia/alfresco/workflow/bootstrap/testWorkflowTemplates.xml</prop>
            </props>
         </list>
      </property>
   </bean>
   
   <bean id="workflowParametersBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="common" />
      <property name="name" value="workflowParametersBootstrap" />
      <property name="executeOnceOnly" value="true" />
      <property name="dependsOn">
         <list>
            <ref bean="parametersSpacesBootstrap" />
         </list>
      </property>
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/param:parameters</prop>
               <prop key="location">ee/webmedia/alfresco/workflow/bootstrap/workflow-parameters.xml</prop>
            </props>
         </list>
      </property>
   </bean>   
   
   <!-- Used to fix invalid parallelTasks property and update lucene index (CL task 155454) -->
   <bean id="ParallelTasksPropertiesUpdater" class="ee.webmedia.alfresco.workflow.bootstrap.ParallelTasksPropertiesUpdater" parent="module.baseComponent" >
      <property name="moduleId" value="simdhs" />
      <property name="name" value="ParallelTasksPropertiesUpdater" />
      <property name="executeOnceOnly" value="false" />
      <property name="generalService" ref="generalService" />
      <property name="nodeService" ref="nodeService" />
      <property name="searchService" ref="searchService" />
      <property name="enabled" value="${parallelTasksPropertiesUpdater.enabled}" />
   </bean>   

   <bean id="wmWorkflowService" class="ee.webmedia.alfresco.workflow.service.WorkflowServiceImpl">
      <property name="nodeService" ref="NodeService" />
      <property name="dictionaryService" ref="DictionaryService" />
      <property name="generalService" ref="GeneralService" />
      <property name="userService" ref="UserService" />
      <property name="namespaceService" ref="NamespaceService" />
      <property name="organizationStructureService" ref="OrganizationStructureService" />
      <property name="dvkService" ref="DvkService" />
      <property name="parametersService" ref="ParametersService" />
      <property name="internalTesting" value="${project.test}" />
   </bean>

   <bean id="WmWorkflowService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.workflow.service.WorkflowService</value>
         </list>
      </property>
      <property name="target" ref="wmWorkflowService" />
      <property name="interceptorNames">
         <list>
            <idref bean="commonTransactionInterceptor" />
         </list>
      </property>
   </bean>

   <bean id="workflowType" class="ee.webmedia.alfresco.workflow.service.type.BaseWorkflowType" abstract="true">
      <property name="workflowService" ref="WmWorkflowService" />
      <property name="namespaceService" ref="NamespaceService" />
   </bean>

   <bean class="ee.webmedia.alfresco.workflow.service.type.InformationWorkflowType" parent="workflowType">
      <property name="workflowTypeString" value="wfs:informationWorkflow" />
      <property name="taskTypeString" value="wfs:informationTask" />
      <property name="taskOutcomes" value="1" />
      <property name="notificationService" ref="NotificationService" />
   </bean>

   <bean parent="workflowType">
      <property name="workflowTypeString" value="wfs:signatureWorkflow" />
      <property name="taskTypeString" value="wfs:signatureTask" />
      <property name="taskClass" value="ee.webmedia.alfresco.workflow.service.SignatureTask" />
      <property name="taskOutcomes" value="2" />
   </bean>

   <bean parent="workflowType">
      <property name="workflowTypeString" value="wfs:opinionWorkflow" />
      <property name="taskTypeString" value="wfs:opinionTask" />
      <property name="taskOutcomes" value="1" />
   </bean>

   <bean parent="workflowType">
      <property name="workflowTypeString" value="wfs:reviewWorkflow" />
      <property name="workflowClass" value="ee.webmedia.alfresco.workflow.service.ReviewWorkflow" />
      <property name="taskTypeString" value="wfs:reviewTask" />
      <property name="taskOutcomes" value="3" />
   </bean>
   
   <bean parent="workflowType">
      <property name="workflowTypeString" value="wfs:externalReviewWorkflow" />
      <property name="taskTypeString" value="wfs:externalReviewTask" />
      <property name="taskOutcomes" value="2" />
   </bean>   

   <bean class="ee.webmedia.alfresco.workflow.service.type.AssignmentWorkflowType" parent="workflowType">
      <property name="workflowTypeString" value="wfs:assignmentWorkflow" />
      <property name="workflowClass" value="ee.webmedia.alfresco.workflow.service.AssignmentWorkflow" />
      <property name="taskTypeString" value="wfs:assignmentTask" />
      <property name="taskOutcomes" value="1" />
      <property name="documentService" ref="DocumentService" />
      <property name="nodeService" ref="NodeService" />
   </bean>

   <bean class="ee.webmedia.alfresco.workflow.service.type.DocRegistrationWorkflowType" parent="workflowType">
      <property name="workflowTypeString" value="wfs:docRegistrationWorkflow" />
      <property name="taskTypeString" value="" />
      <property name="taskClass" value="" />
      <property name="documentService" ref="DocumentService" />
   </bean>

   <bean class="ee.webmedia.alfresco.workflow.service.TaskMenuItemProcessor">
      <property name="menuService" ref="MenuService" />
      <property name="documentSearchService" ref="DocumentSearchService" />
   </bean>
   
   <bean id="externalReviewWorkflowImporterComponent" class="ee.webmedia.alfresco.workflow.service.ExternalReviewWorkflowImporterComponent" parent="importerComponent">
      <property name="documentService" ref="DocumentService"/>
      <property name="workflowService" ref="WmWorkflowService"/>
      <property name="classificatorService" ref="ClassificatorService" />
      <property name="userService" ref="UserService" />
      <property name="dvkService" ref="DvkService" />
      <property name="mimetypeService" ref="MimetypeService" />
      <property name="fileService" ref="FileService" />
      <property name="personService" ref="PersonService" />
   </bean>
   
   <bean id="WorkflowSendExternalReviewDocListener" class="ee.webmedia.alfresco.workflow.service.WorkflowSendExternalReviewDocListener">
      <property name="workflowService" ref="WmWorkflowService" />
      <property name="dvkService" ref="DvkService" />
      <property name="nodeService" ref="NodeService" />
   </bean>  
   
   <!-- Used to add temOutcome aspect to external review workflows -->
   <bean id="Version22ReviewWorkflowTempOutcomeUpdater" class="ee.webmedia.alfresco.workflow.bootstrap.Version22ReviewWorkflowTempOutcomeUpdater" parent="module.baseComponent" >
      <property name="moduleId" value="simdhs" />
      <property name="name" value="Version22ReviewWorkflowTempOutcomeUpdater" />
      <property name="executeOnceOnly" value="true" />
      <property name="dependsOn">
         <list>
            <ref bean="ParallelTasksPropertiesUpdater" />
         </list>
      </property>
      <property name="generalService" ref="generalService" />
      <property name="nodeService" ref="NodeService" />
      <property name="searchService" ref="searchService" />
   </bean> 

   <!-- START: web beans: -->
      
   <bean id="DvkWorkflowExporter" class="ee.webmedia.alfresco.workflow.web.DvkWorkflowExporter" scope="session" />

   <bean id="OwnerSearchBean" class="ee.webmedia.alfresco.workflow.web.OwnerSearchBean" scope="session" />
   <!-- END: web beans: -->

</beans>
