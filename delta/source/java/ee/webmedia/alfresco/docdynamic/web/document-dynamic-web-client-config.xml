<alfresco-config>
   <config>
      <actions>

         <action id="document_contractMvParty_add">
            <label-id>document_contractMv_addParty</label-id>
            <tooltip-id>document_contractMv_addParty_tooltip</tooltip-id>
            <image>/images/icons/add_user.gif</image>
            <action-listener>#{DocumentDynamicDialog.addSubNode}</action-listener>
         </action>

         <action id="document_contractParty_remove">
            <label-id>document_contractMv_deleteParty</label-id>
            <tooltip-id>document_contractMv_deleteParty_tooltip</tooltip-id>
            <image>/images/icons/remove_user.gif</image>
            <action-listener>#{DocumentDynamicDialog.removeSubNode}</action-listener>
            <params>
               <param name="subPropsheetsRequiredCount">1</param><!-- contract must have at least 2 parties(1 main party + 1 additional party) -->
            </params>
         </action>

         <action-group id="document_contractMvParty">
            <action idref="document_contractMvParty_add" />
            <action idref="document_contractParty_remove" />
         </action-group>         

         <action-group id="document_dynamic_actions">
<!--             <action idref="document_copy" /> -->
            <action idref="word_file_from_document" />
            <action idref="document_registerDoc" />
<!--             <action idref="document_createReply" /> -->
<!--             <action idref="document_createFollowUp" /> -->
            <action idref="document_send_out" />
<!--             <action idref="create_forum_node_override" /> -->
<!--             <action idref="discuss_node_override" /> -->
            <action idref="document_end" />
            <action idref="document_reopen" />
            <action idref="document_delete" />
<!-- TODO            <action idref="document_favorites_add" /> -->
            <action idref="document_favorites_remove" />
            <action idref="document_manage_permissions" />
<!--             <action idref="document_sendToSap" /> -->
<!--             <action idref="document_sendToSapManually" /> -->
<!--             <action idref="document_changeByNewDocument" /> -->
         </action-group>

      </actions>
      <dialogs>

         <dialog name="documentDynamicDialog" page="/WEB-INF/classes/ee/webmedia/alfresco/docdynamic/web/document-dynamic-dialog.jsp" managed-bean="DocumentDynamicDialog"
            icon="/images/icons/details_large.gif" title-id="document" actions-config-id="document_dynamic_actions" />
         <!-- TODO DLSeadist more-actions-menu-label-id="document_addFollowUp" -->

      </dialogs>
   </config>
</alfresco-config>
