<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <bean class="org.alfresco.web.app.ResourceBundleBootstrap">
      <property name="resourceBundles">
         <list>
            <value>ee/webmedia/alfresco/privilege/web/privilege-webclient</value>
         </list>
      </property>
   </bean>

   <bean class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
      <property name="resourceBundles">
         <list>
            <value>ee/webmedia/alfresco/privilege/web/privilege-webclient</value>
         </list>
      </property>
   </bean>

   <bean id="privilegeWebClientBootstrap" class="org.alfresco.web.config.WebClientConfigBootstrap" init-method="init" depends-on="commonWebClientConfigBootstrap">
      <property name="configs">
         <list>
            <value>classpath:ee/webmedia/alfresco/privilege/web/privilege-web-client-config.xml</value>
         </list>
      </property>
   </bean>

   <bean id="privilegeModelBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
      <property name="models">
         <list>
            <value>ee/webmedia/alfresco/privilege/model/privilegeModel.xml</value>
         </list>
      </property>
   </bean>

   <bean id="privilegeService" class="ee.webmedia.alfresco.privilege.service.PrivilegeServiceImpl">
      <property name="userService" ref="UserService" />
      <property name="authorityService" ref="AuthorityService" />
      <property name="permissionService" ref="PermissionService" />
      <property name="nodeService" ref="NodeService" />
      <property name="applicationService" ref="ApplicationService" />
      <property name="logService" ref="LogService" />
      <property name="generalService" ref="GeneralService" />
      <property name="indexerAndSearcher" ref="admLuceneIndexerAndSearcherFactory" />
      <property name="privilegeActionsEnabled" value="${jobs.enabled}" />
   </bean>

   <bean id="PrivilegeService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.privilege.service.PrivilegeService</value>
         </list>
      </property>
      <property name="target" ref="privilegeService" />
      <property name="interceptorNames">
         <list>
            <idref bean="commonTransactionInterceptor" />
         </list>
      </property>
   </bean>

   <bean id="alterAltAuthorityTable" class="ee.webmedia.alfresco.privilege.bootstrap.AlterAltAuthorityTable" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="executeOnceOnly" value="true" />
      <property name="dataSource" ref="dataSource" />
   </bean>   
   
   <bean id="fixAclInheritanceUpdater2" class="ee.webmedia.alfresco.privilege.bootstrap.FixAclInheritanceUpdater" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="executeOnceOnly" value="true" />
      <property name="jdbcTemplate">
         <bean class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
            <constructor-arg ref="dataSource" />
         </bean>
      </property>
      <property name="aclDaoComponent" ref="aclDaoComponent" />
      <property name="accessControlListDao" ref="accessControlListDAO" />
   </bean>

   <!-- This updater is here for testing application state after migrating documents from static to dynamic. Remove if not needed. -->   
   <bean id="fixAclInheritanceUpdater3" class="ee.webmedia.alfresco.privilege.bootstrap.FixAclInheritanceUpdater" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="executeOnceOnly" value="false" />
      <property name="enabled" value="${updater.version25To313.enabled}" />
      <property name="dependsOn">
         <list>
            <ref bean="deleteNodesAfterConvertToDynamicDocumentUpdater" />
            <ref bean="removeAspectsAfterConvertToDynamicDocumentUpdater" />
         </list>
      </property>
      <property name="jdbcTemplate">
         <bean class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
            <constructor-arg ref="dataSource" />
         </bean>
      </property>
      <property name="aclDaoComponent" ref="aclDaoComponent" />
      <property name="accessControlListDao" ref="accessControlListDAO" />
   </bean>

   <bean id="privilegeActionsQueueBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="executeOnceOnly" value="true" />
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/privilege/bootstrap/privilegeActionsQueue.xml</prop>
            </props>
         </list>
      </property>
   </bean>    

   <bean id="executePrivilegeActionsTrigger" class="org.alfresco.util.TriggerBean" >
      <property name="enabled" value="${jobs.enabled}" />
      <property name="repeatIntervalMinutes" value="1" />
      <property name="startDelayMinutes" value="3" />
      <property name="scheduler" ref="schedulerFactory" />
      <property name="jobDetail">
         <bean id="executePrivilegeActionsJobDetails" class="org.springframework.scheduling.quartz.JobDetailBean">
            <property name="jobClass" value="ee.webmedia.alfresco.privilege.job.ExecutePrivilegeActionsJob" />
         </bean>
      </property>
   </bean> 

   <!-- START: web beans: -->

   <bean id="ManageInheritablePrivilegesDialog" class="ee.webmedia.alfresco.privilege.web.ManageInheritablePrivilegesDialog" scope="session" />

   <!-- END: web beans: -->

</beans>
