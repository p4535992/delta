<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="webServiceTemplate" class="org.springframework.ws.client.core.WebServiceTemplate" />

  <bean id="xTeeConsumer" class="ee.webmedia.xtee.client.service.consumer.StandardXTeeConsumer">
    <property name="webServiceTemplate" ref="webServiceTemplate" />
  </bean>

  <bean id="xTeeServiceConfigurationProvider" class="ee.webmedia.xtee.client.service.configuration.provider.SimpleXTeeServiceConfigurationProvider">
    <property name="securityServer" value="${x-tee.security-server}" />
    <property name="institution" value="${x-tee.institution}" />
    <property name="idCode" value="${x-tee.id-code}" />
    <property name="useDeprecatedApi" value="false" />
  </bean>

  <bean id="ametlikudDokumendidXTeeService" class="ee.webmedia.xtee.client.ametlikuddokumendid.AmetlikudDokumendidXTeeServiceImpl" init-method="init">
    <property name="database" value="ametlikud-dokumendid" />
    <property name="xTeeServiceConfigurationProvider" ref="xTeeServiceConfigurationProvider" />
    <property name="xTeeConsumer" ref="xTeeConsumer" />
    <property name="infoSystem" value="${x-tee.infosystem}" />
  </bean>

  <bean id="xTeeServicePropertiesResolver" class="ee.webmedia.xtee.client.service.configuration.provider.XTeeProviderPropertiesResolver" init-method="init">
    <property name="resource" value="classpath:alfresco-global.properties" />
  </bean>

</beans>
