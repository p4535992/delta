<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <!-- Spring-WS servlet creates a child application context, with main spring context as the parent. -->
   <!-- Some beans have to be here for Spring-WS servlet to autodetect them, but we can reference other -->
   <!-- beans from parent context (e.g. GeneralService, ...) -->

   <bean class="ee.webmedia.alfresco.maais.MaaisEndpoint" >
      <property name="documentTemplateService" ref="DocumentTemplateService" />
      <property name="maaisService" ref="MaaisService" />
      <property name="externalSessionService" ref="ExternalSessionService" />
   </bean>

   <bean id="maaisJaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
      <property name="contextPath" value="ee.webmedia.alfresco.maais.generated.server" />
      <property name="schema" value="classpath:ee/webmedia/alfresco/maais/generated/server/maaisServer.xsd" />
<!--       <property name="schemaResourceResolver" ref="classpathResourceResolver" /> -->
      <!--
         If you don't need to serve attachments (swaRef), then disable this
      -->
      <property name="mtomEnabled" value="false" />
   </bean>

   <bean id="maaisSoapMessageDispatcher" class="org.springframework.ws.soap.server.SoapMessageDispatcher">
      <property name="endpointAdapters">
         <list>
            <bean class="org.springframework.ws.server.endpoint.adapter.MarshallingMethodEndpointAdapter">
               <constructor-arg ref="maaisJaxbMarshaller" />
            </bean>
         </list>
      </property>
   </bean>

   <!-- TODO if either bean id or alias is not needed, remove one of these -->

   <alias name="maaisSoapMessageDispatcher" alias="/maais" />

   <bean name="maaisWsdl" class="org.springframework.ws.wsdl.wsdl11.DefaultWsdl11Definition">
      <property name="schema">
         <bean class="org.springframework.xml.xsd.SimpleXsdSchema">
            <property name="xsd" value="classpath:ee/webmedia/alfresco/maais/generated/server/maaisServer.xsd" />
         </bean>
      </property>
      <property name="portTypeName" value="maais" />
      <property name="locationUri" value="/service2/maais" />
      <property name="targetNamespace" value="http://delta/maais/definitions" />
      <property name="requestSuffix" value="Request" />
      <property name="responseSuffix" value="Response" />
   </bean>

   <alias name="maaisWsdl" alias="/maais.wsdl" />

</beans>
