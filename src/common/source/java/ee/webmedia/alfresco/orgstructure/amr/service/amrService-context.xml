<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <bean id="amrServiceTemplate" class="org.springframework.ws.client.core.WebServiceTemplate">
      <property name="messageFactory" ref="messageFactory" />
      <property name="defaultUri" value="${amr.service.url}" />
      <property name="marshaller" ref="xmlBeansMarshaller" />
      <property name="unmarshaller" ref="xmlBeansMarshaller" />
   </bean>

   <bean id="messageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory" />

   <bean id="AmrService" class="ee.webmedia.alfresco.orgstructure.amr.service.AMRServiceImpl" parent="amrServiceTemplate">
        <property name="defaultAmrOrgId" value="${amr.org.id}" />
   </bean>

   <bean id="xmlBeansMarshaller" class="org.springframework.oxm.xmlbeans.XmlBeansMarshaller" />

</beans>