<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd" >

<!-- XTee conf -->

	<bean id="webServiceTemplate" class="org.springframework.ws.client.core.WebServiceTemplate" />

	<bean id="xTeeConsumer" class="ee.webmedia.xtee.client.service.consumer.StandardXTeeConsumer">
		<property name="webServiceTemplate" ref="webServiceTemplate" />
	</bean>

	<bean id="xTeeServiceConfigurationProvider" class="ee.webmedia.xtee.client.service.configuration.provider.PropertiesBasedXTeeServiceConfigurationProvider" init-method="init">
		<property name="resource" value="classpath:ee/webmedia/alfresco/dvk/service/xtee-service.properties"/>
	</bean>

	<bean id="dhlXTeeService" class="ee.webmedia.xtee.client.service.impl.DhlXTeeServiceImpl" init-method="init">
		<property name="database" value="dhl"/><!-- can be unset - then read from the classname prefix -->
		<property name="xTeeServiceConfigurationProvider" ref="xTeeServiceConfigurationProvider" />
		<property name="xTeeConsumer" ref="xTeeConsumer" />
	</bean>

<!-- /XTee conf -->

	<bean id="xTeeServicePropertiesResolver" class="ee.webmedia.xtee.client.service.configuration.provider.XTeeProviderPropertiesResolver" init-method="init">
		<property name="resource" value="classpath:ee/webmedia/alfresco/dvk/service/xtee-service.properties"/>
	</bean>

</beans>
