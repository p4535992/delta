<?xml version="1.0" encoding="UTF-8"?>
<model name="pp:postipoissModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

   <imports>
      <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
      <import uri="http://alfresco.webmedia.ee/tk/model/core/1.0" prefix="tkc" />
   </imports>

   <namespaces>
      <namespace uri="http://alfresco.webmedia.ee/tk/model/postipoiss/1.0" prefix="pp" />
   </namespaces>

   <aspects>

      <aspect name="pp:function">
         <properties>
            <property name="pp:functionId">
               <type>d:text</type>
               <mandatory enforced="true">true</mandatory>
            </property>
         </properties>
         <mandatory-aspects>
            <aspect>tkc:container</aspect>
         </mandatory-aspects>
      </aspect>

      <aspect name="pp:series">
         <properties>
            <property name="pp:seriesId">
               <type>d:int</type>
               <mandatory enforced="true">true</mandatory>
            </property>
            <property name="pp:seriesMultipleYears">
               <type>d:boolean</type>
               <mandatory enforced="true">true</mandatory>
               <default>false</default>
            </property>
            <property name="pp:seriesValidFrom">
               <type>d:date</type>
               <mandatory enforced="true">true</mandatory>
               <index enabled="true">
                  <atomic>true</atomic>
                  <stored>false</stored>
                  <tokenised>both</tokenised>
               </index>
            </property>
            <property name="pp:seriesValidTo">
               <type>d:date</type>
               <mandatory enforced="true">true</mandatory>
               <index enabled="true">
                  <atomic>true</atomic>
                  <stored>false</stored>
                  <tokenised>both</tokenised>
               </index>
            </property>
         </properties>
         <mandatory-aspects>
            <aspect>tkc:container</aspect>
         </mandatory-aspects>
      </aspect>

   </aspects>

</model>
