<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <import resource="classpath:ee/webmedia/alfresco/document/file/file-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/type/document-type-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/permissions/permissions-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/search/document-search-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/associations/associations-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/sendout/send-out-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/forum/forum-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/scanned/scanned-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/register/register-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/log/document-log-context.xml" />
   <import resource="classpath:ee/webmedia/alfresco/document/assignresponsibility/assignresponsibility-context.xml" />

   <bean id="documentModelBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap,workflowModelBootstrap">
      <property name="models">
         <list>
            <value>ee/webmedia/alfresco/document/model/documentCommonModel.xml</value>
            <value>ee/webmedia/alfresco/document/model/documentSpecificModel.xml</value>
            <value>ee/webmedia/alfresco/document/model/documentSubtypeModel.xml</value>
         </list>
      </property>
      <property name="labels">
         <list>
            <value>ee/webmedia/alfresco/document/model/document-common-model</value>
            <value>ee/webmedia/alfresco/document/model/document-specific-model</value>
         </list>
      </property>
   </bean>

   <bean id="documentWebClientBootstrap" class="org.alfresco.web.config.WebClientConfigBootstrap" init-method="init" depends-on="commonWebClientConfigBootstrap">
      <property name="configs">
         <list>
            <value>classpath:ee/webmedia/alfresco/document/web/document-web-client-config.xml</value>
            <value>classpath:ee/webmedia/alfresco/document/web/document-properties-web-client-config.xml</value>
         </list>
      </property>
   </bean>

   <bean class="org.alfresco.web.app.ResourceBundleBootstrap">
      <property name="resourceBundles">
         <list>
            <value>ee/webmedia/alfresco/document/web/document-webclient</value>
         </list>
      </property>
   </bean>

   <bean id="documentService" class="ee.webmedia.alfresco.document.service.DocumentServiceImpl">
      <property name="dictionaryService" ref="DictionaryService" />
      <property name="namespaceService" ref="NamespaceService" />
      <property name="nodeService" ref="NodeService" />
      <property name="generalService" ref="GeneralService" />
      <property name="documentTypeService" ref="DocumentTypeService" />
      <property name="documentTemplateService" ref="DocumentTemplateService" />
      <property name="registerService" ref="RegisterService" />
      <property name="seriesService" ref="SeriesService" />
      <property name="volumeService" ref="VolumeService" />
      <property name="fileFolderService" ref="FileFolderService" />
      <property name="contentService" ref="ContentService" />
      <property name="fileService" ref="FileService" />
      <property name="signatureService" ref="SignatureService" />
      <property name="workflowService" ref="WmWorkflowService" />
      <property name="documentLogService" ref="DocumentLogService" />
      <property name="userService" ref="UserService" />
      <property name="organizationStructureService" ref="OrganizationStructureService" />
      <property name="sendOutService" ref="SendOutService" />
      <property name="fromDvkXPath" value="${dvk.received.parent.folder.xpath}${dvk.received.folder.name}" />
      <property name="incomingEmailPath" value="${imap.config.home.rootPath}/imap-ext:incoming"/>
      <property name="sentEmailPath" value="${imap.config.home.rootPath}/imap-ext:sent"/>
   </bean>

   <bean id="DocumentService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.document.service.DocumentService</value>
         </list>
      </property>
      <property name="target" ref="documentService" />
      <property name="interceptorNames">
         <list>
            <idref bean="commonTransactionInterceptor" />
         </list>
      </property>
   </bean>

   <bean id="propertiesModifierCallback" abstract="true">
      <property name="documentService" ref="DocumentService" />
   </bean>

   <bean class="ee.webmedia.alfresco.document.propmodifiers.OwnerPropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="personService" ref="PersonService" />
      <property name="authenticationService" ref="AuthenticationService" />
      <property name="nodeService" ref="NodeService" />
      <property name="organizationStructureService" ref="OrganizationStructureService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.LicencePropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="parametersService" ref="ParametersService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.TenderingApplicationPropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="parametersService" ref="ParametersService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.ManagementsOrderPropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="parametersService" ref="ParametersService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.VacationOrderPropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="parametersService" ref="ParametersService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.ChancellorsOrderPropertiesModifierCallback" parent="propertiesModifierCallback">
      <property name="parametersService" ref="ParametersService" />
   </bean>

   <bean id="abstractDocChildCreator" abstract="true" parent="propertiesModifierCallback">
      <property name="nodeService" ref="NodeService" />
      <property name="inMemoryChildNodeHelper" ref="inMemoryChildNodeHelper" />
   </bean>

   <bean class="ee.webmedia.alfresco.document.propmodifiers.ErrandApplicantAbroadPropertiesModifierCallback" parent="abstractDocChildCreator">
      <property name="parametersService" ref="ParametersService" />
   </bean>

   <bean class="ee.webmedia.alfresco.document.propmodifiers.ErrandDocDomesticPropertiesModifierCallback" parent="abstractDocChildCreator">
      <property name="parametersService" ref="ParametersService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.propmodifiers.TrainingDocChildCreator" parent="abstractDocChildCreator" />

   <bean id="documentDraftsSpacesBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="documentDraftsSpacesBootstrap" />
      <property name="sinceVersion" value="1.1.1.15" />
      <property name="executeOnceOnly" value="true" />
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/document/bootstrap/drafts.xml</prop>
               <prop key="messages">ee/webmedia/alfresco/document/bootstrap/drafts-bootstrap</prop>
            </props>
         </list>
      </property>
   </bean>

   <bean id="documentParametersBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="common" />
      <property name="name" value="parametersSpacesBootstrap" />
      <property name="sinceVersion" value="1.2.1.6" />
      <property name="executeOnceOnly" value="true" />
      <property name="dependsOn">
         <list>
            <ref bean="parametersSpacesBootstrap" />
         </list>
      </property>
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/param:parameters</prop>
               <prop key="location">ee/webmedia/alfresco/document/bootstrap/document-parameters.xml</prop>
            </props>
         </list>
      </property>
   </bean>

   <bean id="docLockService" class="ee.webmedia.alfresco.document.service.DocLockServiceImpl" parent="lockService" init-method="init" />

   <bean id="DocLockService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.document.service.DocLockService</value>
            <value>org.alfresco.service.cmr.lock.LockService</value>
         </list>
      </property>
      <property name="target" ref="docLockService" />
      <property name="interceptorNames">
         <list>
            <idref bean="LockService_transaction" />
            <idref bean="AuditMethodInterceptor" />
            <idref bean="exceptionTranslator" />
