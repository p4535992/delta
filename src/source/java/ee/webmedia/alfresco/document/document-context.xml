   <bean class="ee.webmedia.alfresco.document.web.UnsentDocumentMenuItemProcessor">
      <property name="menuService" ref="MenuService" />
      <property name="documentSearchService" ref="DocumentSearchService" />
   </bean>
   
   <bean class="ee.webmedia.alfresco.document.web.OutboxDocumentMenuItemProcessor">
      <property name="menuService" ref="MenuService" />
      <property name="documentSearchService" ref="DocumentSearchService" />
   </bean>

   <bean id="inMemoryChildNodeHelper" class="ee.webmedia.alfresco.document.service.InMemoryChildNodeHelper">
      <property name="generalService" ref="generalService" />
   </bean>
   
   <!-- Used to remove sequences of document copying bug (CL task 131723) -->
   <bean id="searchableSendModeUpdater" class="ee.webmedia.alfresco.document.bootstrap.SearchableSendModeUpdater" parent="module.baseComponent" >
      <property name="moduleId" value="simdhs" />
      <property name="name" value="searchableSendModeUpdater" />
      <property name="executeOnceOnly" value="false" />
      <property name="generalService" ref="generalService" />
      <property name="sendOutService" ref="sendOutService" />
      <property name="nodeService" ref="nodeService" />
      <property name="searchService" ref="searchService" />
      <property name="behaviourFilter" ref="policyBehaviourFilter" />
      <property name="searchableSendModeUpdateBeginDate" value="${searchableSendModeUpdate.begin.date}" />
   </bean>    
      
   <!-- Used to add searchable properties to imported document (CL task 143388) -->
   <!-- Normally should be run only once, execution depends on searchablePropertiesUpdater.enabled value -->
   <bean id="searchablePropertiesUpdater" class="ee.webmedia.alfresco.document.bootstrap.SearchablePropertiesUpdater" parent="module.baseComponent" >
      <property name="moduleId" value="simdhs" />
      <property name="name" value="searchablePropertiesUpdater" />
      <property name="executeOnceOnly" value="false" />
      <property name="generalService" ref="generalService" />
      <property name="sendOutService" ref="sendOutService" />
      <property name="nodeService" ref="nodeService" />
      <property name="searchService" ref="searchService" />
      <property name="documentService" ref="documentService" />
      <property name="dictionaryService" ref="dictionaryService" />
      <property name="behaviourFilter" ref="policyBehaviourFilter" />
      <property name="enabled" value="${searchablePropertiesUpdater.enabled}" />
   </bean>    

   <!-- Used to fix mimetype on digidoc files (CL task 122959) -->
   <bean id="ddocMimeTypeUpdater" class="ee.webmedia.alfresco.document.bootstrap.DdocMimeTypeUpdater" parent="module.baseComponent" >
      <property name="moduleId" value="simdhs" />
      <property name="name" value="ddocMimeTypeUpdater" />
      <property name="executeOnceOnly" value="true" />
      <property name="behaviourFilter" ref="policyBehaviourFilter" />
      <property name="searchService" ref="searchService" />
      <property name="nodeService" ref="nodeService" />
      <property name="generalService" ref="generalService" />
      <property name="mimetypeService" ref="mimetypeService" />
   </bean>    

</beans>
