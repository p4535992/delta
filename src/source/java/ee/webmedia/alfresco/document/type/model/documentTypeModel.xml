<?xml version="1.0" encoding="UTF-8"?>
<model name="doctype:documentTypeModel" xmlns="http://www.alfresco.org/model/dictionary/1.0"
   schemaLocation="http://www.alfresco.org/model/dictionary/1.0 http://svn.alfresco.com/repos/alfresco-open-mirror/alfresco/HEAD/root/projects/repository/config/alfresco/model/modelSchema.xsd">

   <imports>
      <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
      <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys" />
   </imports>

   <namespaces>
      <namespace uri="http://alfresco.webmedia.ee/model/documenttype/1.0" prefix="doctype" />
   </namespaces>

   <types>

      <type name="doctype:documentTypes">
         <parent>sys:base</parent>
         <associations>
            <child-association name="doctype:documentType">
               <source>
                  <mandatory>true</mandatory>
                  <many>false</many>
               </source>
               <target>
                  <class>doctype:documentType</class>
                  <mandatory>false</mandatory>
                  <many>true</many>
               </target>
            </child-association>
         </associations>
         <mandatory-aspects>
            <aspect>sys:aspect_root</aspect>
         </mandatory-aspects>
      </type>

      <type name="doctype:documentType">
         <parent>sys:base</parent>
         <properties>
            <property name="doctype:name">
               <type>d:text</type>
               <mandatory>true</mandatory>
            </property>
            <property name="doctype:used">
               <type>d:boolean</type>
               <mandatory>true</mandatory>
            </property>
            <property name="doctype:comment">
               <type>d:text</type>
            </property>
         </properties>
      </type>

   </types>

</model>
