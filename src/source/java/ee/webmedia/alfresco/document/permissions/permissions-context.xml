<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <bean parent="permissionModelBootstrap">
      <property name="model" value="ee/webmedia/alfresco/document/permissions/permissionDefinitions.xml" />
   </bean>

   <!-- Dynamic authority implementations use internal services (without interceptors) -->

   <bean id="dynamicAuthority" abstract="true">
      <property name="permissionServiceImpl" ref="permissionServiceImpl" />
      <property name="nodeService" ref="nodeService" />
      <property name="dictionaryService" ref="dictionaryService" />
      <property name="authorityService" ref="authorityService" />
      <property name="userService" ref="userService" />
      <property name="modelDAO" ref="permissionsModelDAO" />
   </bean>

   <bean class="ee.webmedia.alfresco.document.permissions.DocumentOwnerDynamicAuthority" parent="dynamicAuthority">
      <property name="requiredFor">
         <list>
            <value>DocumentWrite</value>
         </list>
      </property>
   </bean>

   <bean class="ee.webmedia.alfresco.document.permissions.DocumentOwnerFileDynamicAuthority" parent="dynamicAuthority">
      <property name="requiredFor">
         <list>
            <value>DocumentFileRead</value>
            <value>DocumentFileWrite</value>
         </list>
      </property>
   </bean>

   <bean class="ee.webmedia.alfresco.document.permissions.DocumentListCreateDynamicAuthority" parent="dynamicAuthority">
      <property name="requiredFor">
         <list>
            <value>DocumentListCreate</value>
         </list>
      </property>
   </bean>

   <bean class="ee.webmedia.alfresco.document.permissions.DocumentListWriteDynamicAuthority" parent="dynamicAuthority">
      <property name="requiredFor">
         <list>
            <value>DocumentListWrite</value>
         </list>
      </property>
   </bean>

   <bean class="ee.webmedia.alfresco.document.permissions.DocumentDraftDynamicAuthority" parent="dynamicAuthority">
      <property name="requiredFor">
         <list>
            <value>DocumentDelete</value>
         </list>
      </property>
   </bean>

</beans>
