<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

   <bean id="archivalsBundleBootstrap" class="org.alfresco.web.app.ResourceBundleBootstrap">
      <property name="resourceBundles">
         <list>
            <value>ee.webmedia.alfresco.archivals.web.archivals-webclient</value>
         </list>
      </property>
   </bean>

    <bean id="archivalsTempBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="archivalsTempBootstrap" />
      <property name="executeOnceOnly" value="true" />

      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/archivals/bootstrap/archivalsTemp.xml</prop>
            </props>
         </list>
      </property>
   </bean>


    <bean id="archivalsBootstrapImporter" parent="storeImporter" scope="singleton">
        <property name="storeUrl">
            <value>workspace://ArchivalsStore</value>
        </property>
         <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/archivals/bootstrap/archivals.xml</prop>
            </props>
         </list>
      </property>
    </bean>


    <bean id="archivalsPermissionBootstrapImporter" parent="storeImporter" scope="singleton">
        <property name="storeUrl">
            <value>workspace://ArchivalsStore</value>
        </property>
        <property name="useExistingStore" value="true"/>
         <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/archivals/bootstrap/archivals-permission.xml</prop>
            </props>
         </list>
      </property>
    </bean>

    <bean id="archivalsParametersBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="parametersSpacesBootstrap" />
      <property name="sinceVersion" value="1.4.1.11" />
      <property name="executeOnceOnly" value="true" />
      <property name="dependsOn">
         <list>
            <ref bean="parametersSpacesBootstrap" />
         </list>
      </property>
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="path">/param:parameters</prop>
               <prop key="location">ee/webmedia/alfresco/archivals/bootstrap/archivals-parameters.xml</prop>
            </props>
         </list>
      </property>
   </bean>

    <bean id="archivalsWebClientConfigBootstrap" class="org.alfresco.web.config.WebClientConfigBootstrap" init-method="init" depends-on="commonWebClientConfigBootstrap">
      <property name="configs">
         <list>
            <value>classpath:ee/webmedia/alfresco/archivals/web/archivals-web-client-config.xml</value>
         </list>
      </property>
   </bean>

    <bean id="archivalsService" class="ee.webmedia.alfresco.archivals.service.ArchivalsServiceImpl">
      <property name="copyService" ref="CopyService"/>
      <property name="generalService" ref="GeneralService" />
      <property name="nodeService" ref="NodeService" />
      <property name="seriesService" ref="SeriesService" />
      <property name="volumeService" ref="VolumeService" />
      <property name="functionsService" ref="FunctionsService" />
      <property name="searchService" ref="SearchService" />
      <property name="archivalsStore" value="workspace://ArchivalsStore" />
   </bean>

   <bean id="ArchivalsService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.archivals.service.ArchivalsService</value>
         </list>
      </property>
      <property name="target" ref="archivalsService" />
      <property name="interceptorNames">
         <list>
            <idref bean="commonTransactionInterceptor" />
         </list>
      </property>
   </bean>

    <bean class="ee.webmedia.alfresco.common.bootstrap.ModuleComponentDependsOnSetter">
      <property name="source" ref="parameterRescheduledJobsBootstrap" />
      <property name="dependsOn" ref="archivalsParametersBootstrap" />
   </bean>

   <bean id="destroyVolumesTrigger" class="ee.webmedia.alfresco.parameters.job.ParameterRescheduledTriggerBean"
         parent="parameterRescheduledTriggerParent" depends-on="archivalsParametersBootstrap">
      <property name="parameterName" value="volumeDestructionPeriod" />
      <property name="parameterFormat" value="D" />
      <property name="jobDetail">
         <bean id="updateOrganizationsListJobDetails" class="org.springframework.scheduling.quartz.JobDetailBean">
            <property name="jobClass" value="ee.webmedia.alfresco.archivals.job.DestroyVolumesJob" />
            <property name="jobDataAsMap">
               <map>
                  <entry key="archivalsService" value-ref="ArchivalsService" />
               </map>
            </property>
         </bean>
      </property>
   </bean>
</beans>