<alfresco-config area="workflow-settings">

   <!-- This is a separate config area for admin compound workflow settings screen. -->

   <config evaluator="node-type" condition="wfc:compoundWorkflowDefinition">
      <property-sheet>
         <show-property name="wfc:name" />
         <show-property name="wfc:documentTypes" component-generator="SearchGenerator" pickerCallback="#{DocumentTypeDialog.searchUsedDocTypes}"
            converter="ee.webmedia.alfresco.document.type.web.DocumentTypeConverter" dialogTitleId="workflow_compound_type_popUpInfo" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:reviewWorkflow">
      <property-sheet>
         <show-property name="wfc:parallelTasks" component-generator="GeneralSelectorGenerator" selectionItems="#{CompoundWorkflowDefinitionDialog.getParallelSelections}" converter="javax.faces.Boolean" />
      </property-sheet>
   </config>

   <config evaluator="aspect-name" condition="wfs:commonWorkflow" >
      <property-sheet>
         <show-property name="wfs:description" component-generator="TextAreaGenerator" styleClass="expand19-200" />
         <show-property name="wfs:resolution" component-generator="TextAreaGenerator" styleClass="expand19-200" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:signatureWorkflow">
      <property-sheet>
         <show-property name="{temp}workflowTasks" component-generator="TaskListGenerator" ignore-if-missing="false" forcedMandatory="true" display-label-id="signatureWorkflow_tasks" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:opinionWorkflow">
      <property-sheet>
         <show-property name="{temp}workflowTasks" component-generator="TaskListGenerator" ignore-if-missing="false" forcedMandatory="true" display-label-id="opinionWorkflow_tasks" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:reviewWorkflow">
      <property-sheet>
         <show-property name="{temp}workflowTasks" component-generator="TaskListGenerator" ignore-if-missing="false" forcedMandatory="true" display-label-id="reviewWorkflow_tasks" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:informationWorkflow">
      <property-sheet>
         <show-property name="{temp}workflowTasks" component-generator="TaskListGenerator" ignore-if-missing="false" forcedMandatory="true" display-label-id="informationWorkflow_tasks" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:assignmentWorkflow">
      <property-sheet>
         <show-property name="{temp}workflowTasks" component-generator="TaskListGenerator" ignore-if-missing="false" forcedMandatory="true" display-label-id="assignmentWorkflow_tasks" responsible="true" />
         <show-property name="{temp}workflowTasksCo" component-generator="TaskListGenerator" ignore-if-missing="false" display-label-id="assignmentWorkflow_tasks_co" />
      </property-sheet>
   </config>

   <config evaluator="node-type" condition="wfs:signatureWorkflow,wfs:opinionWorkflow,wfs:reviewWorkflow,wfs:docRegistrationWorkflow,wfs:informationWorkflow,wfs:assignmentWorkflow" >
      <property-sheet>
         <show-property name="wfc:stopOnFinish" />
      </property-sheet>
   </config>

</alfresco-config>