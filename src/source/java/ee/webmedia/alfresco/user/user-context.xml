<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
   
   <bean id="userWebClientConfigBootstrap" class="org.alfresco.web.config.WebClientConfigBootstrap" init-method="init" depends-on="commonWebClientConfigBootstrap">
      <property name="configs">
         <list>
            <value>classpath:ee/webmedia/alfresco/user/web/user-web-client-config.xml</value>
         </list>
      </property>
   </bean>
   
   <bean id="userResourceBundleBootstrap" class="org.alfresco.web.app.ResourceBundleBootstrap">
      <property name="resourceBundles">
         <list>
            <value>ee.webmedia.alfresco.user.web.user-webclient</value>
         </list>
      </property>
   </bean>
   
   <bean id="documentManagersGroupBootstrap" class="ee.webmedia.alfresco.user.bootstrap.DocumentManagersGroupBootstrap" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="documentManagersGroupBootstrap" />
      <property name="executeOnceOnly" value="true" />
      <property name="sinceVersion" value="1.1.1.23" />
   </bean>
   
   <bean id="userService" class="ee.webmedia.alfresco.user.service.UserServiceImpl">
      <property name="authorityService" ref="AuthorityService" />
      <property name="organizationStructureService" ref="OrganizationStructureService" />
      <property name="generalService" ref="GeneralService" />
      <property name="nodeService" ref="NodeService" />
      <property name="searchService" ref="SearchService" />
   </bean>

   <bean id="UserService" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces">
         <list>
            <value>ee.webmedia.alfresco.user.service.UserService</value>
         </list>
      </property>
      <property name="target" ref="userService" />
      <property name="interceptorNames">
         <list>
            <idref bean="commonTransactionInterceptor" />
         </list>
      </property>
   </bean>

   <bean id="userHomesSpacesBootstrap" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
      <property name="moduleId" value="simdhs" />
      <property name="name" value="userHomesSpacesBootstrap" />
      <property name="sinceVersion" value="1.1.1.25" />
      <property name="executeOnceOnly" value="true" />
      <property name="importer" ref="spacesBootstrap" />
      <property name="bootstrapViews">
         <list>
            <props>
               <prop key="encoding">UTF-8</prop>
               <prop key="path">/</prop>
               <prop key="location">ee/webmedia/alfresco/user/bootstrap/userHomes.xml</prop>
               <prop key="messages">ee/webmedia/alfresco/user/bootstrap/userHomes-bootstrap</prop>
            </props>
         </list>
      </property>
   </bean>

</beans>